/**index.wxss**/
.view {
  padding: 0rpx 35rpx;
  width: 680rpx;
}

swiper {
  /* height: 300rpx; */
  height: 450rpx;
  width: 660rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

swiper-item {
  /* height: 300rpx; */
  height: 450rpx;
  width: 660rpx;
  border-radius: 10rpx;
}

swiper-item image {
  /* height: 300rpx; */
  height: 450rpx;
  width: 660rpx;
  border-radius: 10rpx;
}

.recommend image {
  width: 680rpx;
  height: 360rpx;
  border-radius: 10rpx;
}

.hotproduct {
  display: inline-block;
  margin: 10rpx 20rpx;
}

.hotproduct .single {
  width: 300rpx;
  margin-top: 10rpx;
}

.hotproduct .image {
  width: 300rpx;
  height: 180rpx;
  box-shadow: 0rpx 0rpx 10px #888;

  /* width: 100rpx;
  transform: translateX(-50%);
  margin-left: 50%;
  background-color: #eee;
  border-radius: 50%; */
}

.hotproduct text {
  font-size: 24rpx;
  display: -webkit-box;
  /*关键属性*/
  /* word-break: break-all; */
  -webkit-box-orient: vertical;
  /* 关键属性 */
  -webkit-line-clamp: 2;
  /* 关键属性 */
  overflow: hidden;
  /* 关键属性 */
  text-overflow: ellipsis;
  /* 超出内容显示省略号*/
  opacity: .6;
}

.name {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center
}

.name image {
  width: 30rpx;
  height: 30rpx
}

.copyright {
  width: 100%;
  font-size: 20rpx;
  /* position: absolute; */
  /* bottom: 20rpx; */
  /* transform: translateX(-50%);
  margin-left: 50% */
  /* align-items: center */
  margin: 100rpx 0 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: .4;
}

/* catelog */
.flex3 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.ibanner {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 30rpx;
  margin-top: 30rpx;
}

.ibanner>.flex3 {
  width: 25%;
}

.ibanimg {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 15rpx;
  /* background-color: #eee; */
  /* border-radius: 50%; */
}

.ibanzname {
  width: 120rpx;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
}

.gobyndsingle {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}