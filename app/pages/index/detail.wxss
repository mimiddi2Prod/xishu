.userInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.welcome {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.font32 {
  font-size: 32rpx;
}

.font30 {
  font-size: 30rpx;
  word-break: break-all;
}

.userName {
  margin-bottom: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  /* margin-left: 10rpx; */
